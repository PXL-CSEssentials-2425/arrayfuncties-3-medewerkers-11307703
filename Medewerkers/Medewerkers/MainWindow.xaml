<Window x:Class="Medewerkers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medewerkers"
        mc:Ignorable="d"
        Title="Medewerkers" Height="450" Width="450" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <WrapPanel Margin="10" >
                <Label Content="Salaris" />
                <TextBox x:Name="salaryTextBox" Width="100"/>
                <Button x:Name="updateButton" Content="Update" Width="100" Margin="5,0,0,0" Click="updateButton_Click"/>
            </WrapPanel>
            <ListBox x:Name="namenListBox" Width="200" Height="150" SelectionChanged="namenListBox_SelectionChanged"/>
            <Label x:Name="errorLabel" Content="Geen error" />

        </StackPanel>
        
        
        
    </Grid>
</Window>
